<h2>Edit Profile</h2>

<%= form_with(model: @user, url: profile_path, method: :patch) do |form| %>
  <div class="form-group">
    <%= form.label :username %>
    <%= form.text_field :username, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :street %>
    <%= form.text_field :street, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :city %>
    <%= form.text_field :city, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :postal_code %>
    <%= form.text_field :postal_code, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :province %>
    <%= form.text_field :province, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Update Profile', class: 'btn btn-primary' %>
  </div>
<% end %>

