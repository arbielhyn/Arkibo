<!-- app/views/orders/checkout.html.erb -->

<h1>Checkout</h1>

<%= form_with(model: @order, url: checkout_order_path, method: :post) do |f| %>
  <!-- Order summary -->
  <h2>Order Summary</h2>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Total Price</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.quantity %></td>
          <td>$ <%= number_with_precision(item.unit_price, precision: 2) %></td>
          <td>$ <%= number_with_precision(item.unit_price * item.quantity, precision: 2) %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="3">Subtotal:</td>
        <td>$ <%= number_with_precision(@subtotal, precision: 2) %></td>
      </tr>
      <tr>
        <td colspan="3">Tax:</td>
        <td>$ <%= number_with_precision(@total_amount - @subtotal, precision: 2) %></td>
      </tr>
      <tr>
        <td colspan="3">Total:</td>
        <td>$ <%= number_with_precision(@total_amount, precision: 2) %></td>
      </tr>
    </tfoot>
  </table>

  <!-- Customer information -->
  <h2>Customer Information</h2>
  <p><strong>Name:</strong> <%= current_user.name %></p>
  <p><strong>Email:</strong> <%= current_user.email %></p>
  <p><strong>Address:</strong> <%= current_user.street %></p>
  <p><strong>Province:</strong> <%= current_user.province %></p>

  <!-- Payment information (if applicable) -->
  <!-- Add fields or payment gateway integration as needed -->

  <%= f.submit "Place Order", class: "btn btn-primary" %>
<% end %>

<%= link_to "Cancel", cart_show_path, class: "btn btn-secondary" %>
