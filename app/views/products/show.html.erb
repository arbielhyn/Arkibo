<div class="container mx-auto px-4 py-8">
  <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
      <nav>
    <%= breadcrumbs %>
  </nav>
    <div class="px-6 py-4">
      <h1 class="text-3xl font-semibold text-gray-900 mb-4"><%= @product.name %></h1>
      <p class="text-lg text-gray-700 mb-4"><%= @product.description %></p>
      <div class="flex justify-between items-center mb-4">
        <p class="text-xl font-medium text-gray-900">Price: <%= number_to_currency(@product.price) %></p>
        <p class="text-xl font-medium text-gray-900">Size: <%= @product.size %></p>
      </div>
      <p class="text-lg text-gray-700 mb-4">Category: <%= @product.category.name %></p>
    </div>
    <div class="px-6 py-4 bg-gray-100 border-t border-gray-200 flex justify-end">
      <%= link_to 'Back to Products', products_path, class: 'text-indigo-600 hover:text-indigo-900 font-medium text-lg' %>
    </div>
  </div>
</div>
