<header class="bg-white shadow-md">
  <div class="container mx-auto px-8 py-8 flex items-center justify-between">
    <!-- Brand -->
    <div class="flex items-center">
      <a href="/" class="text-lg font-bold text-gray-900">Arkibo</a>
    </div>
    
    <!-- Navigation Links (Desktop) -->
    <div class="hidden md:flex flex-1 justify-center items-center space-x-10">
      <%= link_to 'Home', root_path, class: 'text-lg text-gray-700 hover:text-gray-900' %>
      <%= link_to 'Shop', products_path, class: 'text-m text-gray-700 hover:text-gray-900' %>
      <%= link_to 'About', about_path, class: 'text-m text-gray-700 hover:text-gray-900' %>
      <%= link_to 'Contact', contact_path, class: 'text-m text-gray-700 hover:text-gray-900' %>
      <%= link_to 'My Profile', profile_path, class: 'text-m text-gray-700 hover:text-gray-900' %>
      <%= link_to 'View Cart', cart_path, class: 'text-m text-gray-700 hover:text-gray-900' %>
    </div>
    
    <!-- Search Form -->
    <div class="flex flex-1 justify-center md:justify-end items-center space-x-4">
      <%= form_with(url: products_path, method: :get, local: true, class: "flex items-center space-x-2") do %>
        <div class="relative">
          <%= text_field_tag :keyword, params[:keyword], placeholder: "Search...", class: "border border-gray-300 rounded-md py-2 px-4" %>
        </div>
        <div class="relative">
          <%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :name, params[:category_id]), { include_blank: "All Categories", class: "border border-gray-300 rounded-md py-2 px-4" } %>
        </div>
        <div>
          <%= submit_tag "Search", class: "bg-blue-500 text-white rounded-md py-2 px-4" %>
        </div>
      <% end %>
    </div>
    
    <!-- User Authentication Links -->
    <div class="hidden md:flex space-x-4 items-center">
      <% if user_signed_in? %>
        <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "text-blue-700 focus:outline-none" %>
      <% else %>
        <%= link_to 'Sign up', new_user_registration_path, class: "text-blue-700 hover:text-blue-900" %>
        <%= link_to 'Login', new_user_session_path, class: "text-blue-700 hover:text-blue-900" %>
      <% end %>
    </div>
    
    <!-- Mobile Menu Button -->
    <div class="md:hidden">
      <button class="text-blue-700 focus:outline-none">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </div>
</header>
