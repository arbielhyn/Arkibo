<div class="cart">
  <h1>Your Cart</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.each do |item| %>
        <tr>
          <td><%= item[:name] %></td>
          <td><%= number_to_currency(item[:price]) %></td>
          <td>
            <% if item[:product_id].present? %>
              <%= button_to 'Remove', remove_from_cart_path(item[:product_id]), method: :delete %>
            <% else %>
              <span>Invalid item</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>Total: <%= number_to_currency(@cart_total) %></p>
</div>
