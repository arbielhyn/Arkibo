<!-- app/views/cart/show.html.erb -->
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between mb-4">
    <h2 class="text-2xl font-semibold">Shopping Cart</h2>
  </div>

  <table class="min-w-full divide-y divide-gray-200">
    <thead>
      <tr>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm font-medium text-gray-900"><%= cart_item.product.name %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm text-gray-900"><%= number_to_currency(cart_item.product.price) if cart_item.product.price %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm text-gray-900"><%= cart_item.quantity %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm text-gray-900"><%= number_to_currency(cart_item.quantity * cart_item.product.price) if cart_item.product.price && cart_item.quantity %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= button_to 'Remove', remove_item_cart_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Continue Shopping", products_path, class: "text-blue-500 hover:underline mt-4 block" %>
  <%= link_to "Proceed to Checkout", checkout_orders_path, class: "btn btn-primary" %>
</div>
